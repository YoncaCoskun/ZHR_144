<mvc:View controllerName="ZHR_144.controller.Screen4Approve" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:form="sap.ui.layout.form" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:commons="sap.ui.commons"
	class="sapUiSizeCompact" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt"
	xmlns="sap.m" xmlns:semantic="sap.m.semantic">
	<App>
		<pages>
			<Page title="" showNavButton="false" showHeader="false">
				<SplitContainer>
					<masterPages>
						<semantic:MasterPage title="Onaycılar">
							<List items="{/results}" id="onayciList4">
								<items>
									<ObjectListItem title="{OnayciAdi} {OnayciSoyadi}" type="Active" press="onListItemPress" number="{Onayci}" numberUnit="">
										<firstStatus>
											<ObjectStatus title="" text="Bekleniyor" state="Warning"/>
										</firstStatus>
										<attributes>
											<ObjectAttribute text=""/>
										</attributes>
									</ObjectListItem>
								</items>
							</List>
						</semantic:MasterPage>
					</masterPages>
					<detailPages>
						<semantic:DetailPage title="Özet">
							<ObjectHeader id="oh4" responsive="true" fullScreenOptimized="true" binding="{/ProductCollection/2}" icon="{ProductPicUrl}" iconAlt="{Name}"
								intro="Nakil" title="Fiş Konusu" titleActive="true" titlePress="handleTitlePress"
								number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
								numberUnit="{CurrencyCode}" numberState="Success" backgroundDesign="Translucent">
								<attributes>
									<ObjectAttribute title="" text="" id="adSoyadApprove4"/>
									<ObjectAttribute title="Doğum Tarihi" text="" id="dogumTarihApprove4"/>
									<ObjectAttribute title="Geçerlilik Tarihi" text="" id="gecerTarihApprove4"/>
								</attributes>
								<headerContainer>
									<IconTabBar id="itb4" selectedKey="key3" upperCase="true">
										<items>
											<IconTabFilter icon="sap-icon://hint">
												<VBox>
													<form:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
														labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3" title="Özet Bilgi">
														<form:content>
															<core:Title/>
															<Label text="Sicil No"/>
															<Input class="inputForm" value="" editable="false" id="sicilApprove4"/>
															<Label text="TC Kimlik"/>
															<Input class="inputForm" value="" editable="false" id="tcApprove4"/>
															<Label text="Pozisyon"/>
															<Input class="inputForm" value="" editable="false" id="posApprove4"/>
															<Label text="Personel Alanı"/>
															<Input class="inputForm" value="" editable="false" id="perAlanApprove4"/>
															<Label text="Personel Alt Alanı"/>
															<Input class="inputForm" value="" editable="false" id="perAltAlanApprove4"/>
															<Label text="Şirket"/>
															<Input class="inputForm" value="" editable="false" id="sirketApprove4"/>
															<Label text="İş Alanı"/>
															<Input class="inputForm" value="" editable="false" id="isAlanApprove4"/>
															<Label text="İş Anahtarı"/>
															<Input class="inputForm" value="" editable="false" id="isAnahApprove4"/>
															<Label text="Org. Birimi"/>
															<Input class="inputForm" value="" editable="false" id="orgBrmApprove4"/>
															<Label text="Çalışan Grb."/>
															<Input class="inputForm" value="" editable="false" id="clsGrpApprove4"/>
															<Label text="Çalışan Alt Grb."/>
															<Input class="inputForm" value="" editable="false" id="clsAltGrpApprove4"/>
															<core:Title/>
															<Label text="Skala Kodu"/>
															<Input class="inputForm" value="" editable="false" id="skalaApprove4"/>
															<Label text="Ücret"/>
															<Input class="inputForm" value="" editable="false" id="ucretApprove4"/>
															<Label text="Diğer Bilgiler"/>
															<Input class="inputForm" value="" editable="false" id="digerApprove4"/>
															<Label text="Okul Türü"/>
															<Input class="inputForm" value="" editable="false" id="okulTurApprove4"/>
															<Label text="Okul Adı"/>
															<Input class="inputForm" value="" editable="false" id="okulAdApprove4"/>
															<Label text="Eğitim Dalı"/>
															<Input class="inputForm" value="" editable="false" id="egitimApprove4"/>
															<Label text="Dil Primi"/>
															<Input class="inputForm" value="" editable="false" id="dilPrimApprove4"/>
															<Label text="Araç Primi"/>
															<Input class="inputForm" value="" editable="false" id="aracPrimApprove4"/>
															<Label text="Mevsimlik Prim"/>
															<Input class="inputForm" value="" editable="false" id="mevPrimApprove4"/>
															<Label text="Vekalet Primi"/>
															<Input class="inputForm" value="" editable="false" id="vekPrimApprove4"/>
														</form:content>
													</form:SimpleForm>
												</VBox>
											</IconTabFilter>
											<IconTabFilter icon="sap-icon://table-view" id="iconTabTable">
												<VBox>
													<form:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
														labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3" title="Yabancı Dil">
														<form:content>
															<Table growing="true" growingThreshold="10" id="idLanguageTableApprove4" inset="false"
																items="{ path: '/results', sorter: { path: 'Sptxt' } }" mode="SingleSelectMaster">
																<columns>
																	<Column width="12em">
																		<Text text="Dil Türü"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Yabancı Dil"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Puan"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Sınav Tarihi"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Yazma"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Okuma"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Dinleme"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Genel"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem>
																		<cells>
																			<Text text="{Spras}"/>
																			<Text text="{Sptxt}"/>
																			<Text text="{Puan}"/>
																			<Text text="{SinavTarihi}"/>
																			<Text text="{Yazma}"/>
																			<Text text="{Okuma}"/>
																			<Text text="{Dinleme}"/>
																			<Text text="{Genel}"/>
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</form:content>
													</form:SimpleForm>
												</VBox>
												<VBox>
													<form:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
														labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3" title="Zihinsel Beceri">
														<form:content>
															<Table growing="true" growingThreshold="10" id="idAbilityTableApprove4" inset="false"
																items="{ path: '/results', sorter: { path: 'SinavTuru' } }" mode="SingleSelectMaster">
																<columns>
																	<Column width="12em">
																		<Text text="Sınav Türü"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Puan"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Sınav Tarihi"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem>
																		<cells>
																			<Text text="{SinavTuru}"/>
																			<Text text="{Puan}"/>
																			<Text text="{SinavTarihi}"/>
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</form:content>
													</form:SimpleForm>
												</VBox>
												<VBox>
													<form:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
														labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3" title="PD Sonuçları" id="formPD">
														<form:content>
															<Table growing="true" growingThreshold="10" id="idPDTableApprove4" inset="false" items="{ path: '/results', sorter: { path: 'Pdyear' } }"
																mode="SingleSelectMaster">
																<columns>
																	<Column width="12em">
																		<Text text="Tarih"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Sonuç"/>
																	</Column>
																	<Column width="12em">
																		<Text text="Puan"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem>
																		<cells>
																			<Text text="{path: 'Pdyear' , formatter: '.vDate'}"/>
																			<Text text="{Pdsonuc}"/>
																			<Text text="{Pdpuan}"/>
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</form:content>
													</form:SimpleForm>
												</VBox>
											</IconTabFilter>
										</items>
									</IconTabBar>
								</headerContainer>
							</ObjectHeader>
							<semantic:customFooterContent>
								<Button type="Transparent" text="Geri" press="onBack">
									<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
								</Button>
								<Button type="Emphasized" text="Tamamla" press="saveInf">
									<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
								</Button>
								<Button type="Transparent" text="Çıkış" press="handleWizardCancel">
									<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
								</Button>
							</semantic:customFooterContent>
						</semantic:DetailPage>
					</detailPages>
				</SplitContainer>
			</Page>
		</pages>
	</App>
</mvc:View>